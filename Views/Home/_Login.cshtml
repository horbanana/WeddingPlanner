@model LUser

<form action="LogCheck" method="post">
    <div class = "form-group">
        <label>Email</label>
        <span asp-validation-for="LEmail" style="color:red;"></span>
        <input class="form-control" asp-for="LEmail">
    </div>
    <div class = "form-group">
        <label>Password</label>
        <span asp-validation-for="LPassword" style="color:red;"></span>
        <input type="password" class="form-control" asp-for="LPassword">
    </div>
    <input type="submit" class="btn btn-success">
</form> 